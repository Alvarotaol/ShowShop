<p id="notice"><%= notice %></p>

<h1>Lista de lotes</h1>

<table>
  <thead>
    <tr>
      <th><%= t :produto  %> </th>
      <th><%= t :qtd_lote  %> </th>
      <th><%= t :preco  %></th>
      <th><%= t :t_lote  %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lotes.each do |lote| %>
      <tr>
        <td><%= Produto.find_by_id(lote.produto_id).nome %></td>
        <td><%= lote.qtd_lote %></td>
        <td><%= lote.preco %></td>
        <td><%= lote.t_lote %></td>
        <td><%= link_to 'Mostrar', lote %></td>
        <td><% if current_usuario.try(:fornecedor?) %><%= link_to 'Editar', edit_lote_path(lote) %><% end %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if current_usuario.try(:fornecedor?) %>
<%= link_to 'Novo Lote', new_lote_path %>
<% end %>
