<p id="notice"><%= notice %></p>

<h1>Lista de lotes</h1>

<table>
  <thead>
    <tr>
      <th><%= t :qtd_lote  %> </th>
      <th><%= t :preco  %></th>
      <th><%= t :t_lote  %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lotes.each do |lote| %>
      <tr>
        <td><%= lote.qtd_lote %></td>
        <td><%= lote.preco %></td>
        <td><%= lote.t_lote %></td>
        <td><%= link_to 'Mostrar', lote %></td>
        <td><%= link_to 'Editar', edit_lote_path(lote) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Lote', new_lote_path %>
