<p id="notice"><%= notice %></p>

<div class="row">
	<div class="col-sm-4">
		<%= link_to loja_produtos_path(@loja) do%> <i class="glyphicon glyphicon-chevron-left"></i> Retornar<% end %>
		<%= image_tag(@produto.imagem.url(:medium)) %>
	</div>
	<div class="col-sm-4">
	
		<!-- <strong><%= t :nome %>:</strong> -->
		<h2><%= @produto.nome %><small>
		<% if current_usuario.try(:fornecedor?) %>
			<%= link_to edit_loja_produto_path(@loja, @produto) do%>
			<span class="glyphicon glyphicon-edit"></span><% end %>
		<% end %>
		</small></h2>
		<p>Marca <i><%= @produto.marca %></i></p>
		<br>

		<h3>Descrição</h3>
		<%= @produto.descricao %>
		<br>
		<h5>Categorias:</h5>
        <%@categorias.each do |cat|%>
        
        <span class="label"><i class="glyphicon glyphicon-tag"></i><%= cat%></span>
        <%end%>
		<br>
	</div>
	<div class="col-sm-4">
		<h3>Informações</h3>
		<p style = "font-size:18px;">Vendedor:
		<span style = "font-style: italic;"> <%= @loja.nome%>
		</span></p>
		<p style="color: #009933">Este produto está disponível.</p>
		
		<p style=""> Preço:
			<span style = "font-size:21px;"><%= @produto.preco %>
		</span></p>
		<%= link_to adicionar_path(@loja, @produto), method: :post, :class => "btn btn-success" do %><i class="glyphicon glyphicon-shopping-cart"></i> Comprar este produto <% end %>
		

	</div>
</div>
