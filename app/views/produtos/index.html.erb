<p id="notice"><%= notice %></p>

<div class="row carousel-holder">
	<div class="col-xs-12">
		<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
			<ol class="carousel-indicators">
				<li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
				<li data-target="#carousel-example-generic" data-slide-to="1"></li>
				<li data-target="#carousel-example-generic" data-slide-to="2"></li>
			</ol>
			<div class="carousel-inner">
				<div class="item active">
					<img class="slide-image" src="http://placehold.it/900x300" alt="">
				</div>
				<div class="item">
					<img class="slide-image" src="http://placehold.it/900x300" alt="">
				</div>
				<div class="item">
					<img class="slide-image" src="http://placehold.it/900x300" alt="">
				</div>
			</div>
			<a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
				<span class="glyphicon glyphicon-chevron-left"></span>
			</a>
			<a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
				<span class="glyphicon glyphicon-chevron-right"></span>
			</a>
		</div>
	</div>

	<div>
		<div>
			<div>
				<h1>Catálogo de Produtos de <%= @loja.nome %></h1>
				<% #if current_usuario.try(:fornecedor?) %>	

				<div class="dropdown">
					<button class="btn btn-primary dropdown-toggle" type="button" id = "ddmenu" data-toggle="dropdown">Ferramentas <i class="glyphicon glyphicon-wrench"></i>
						<span class="caret"></span></button>
						<ul class="dropdown-menu" role="menu" aria-labelledby="ddmenu">
							<% if current_usuario.try(:fornecedor?) %>
							<!--Ferramentas para o fornecedor -->
							<li class="dropdown-header">Fornecedores</li>
							<li><%= link_to "Novo Produto", new_loja_produto_path(@loja), :class => "" %></li>
							<li><%= link_to "Modificar Loja", edit_loja_path(@loja), :class => "" %></li>
							<li><a href="#">Link para outra coisa?</a></li>
							<li class="divider"></li>
							<% end %>
							<!--Ferramentas para o cliente -->
							<li class="dropdown-header">Clientes</li>
							<li><a href="#">Link para algo mais</a></li>
						</ul>
					<% unless @itens.nil?%>
						<%= link_to carrinho_path, :class => "btn btn-primary" do %><i class="glyphicon glyphicon-shopping-cart"></i> Carrinho de compras <% end %>
						<% end %>
					</div>
				</div>
				<% #end %>
			</div>
		</div>

		<div style="padding-top: 20px;">
			<div class="row">
				<% @produtos.each do |produto| %>
				<div class="col-sm-4 col-lg-4 col-md-4">
					<div class="thumbnail">
						<%=link_to image_tag(produto.imagem.url(:thumb), class: 'media-object', :align=> "middle"), loja_produto_path(@loja, produto) %>
						<div class="caption">
							<h4 class="pull-right">
								<%if produto.preco==nil%>
								<div> IND </div>
								<%else%>
								<div> R$ <%= produto.preco%> </div>
								<%end%>
							</h4>
							<h4 class="nome-produto"> <%=link_to produto.nome, loja_produto_path(@loja, produto) %> </h4>

							<div class="marca-produto" style = "font-style: oblique; font-size: 10px; color: #767676;" > <%= produto.marca %>	</div>
							<div class="disponibilidade" style = "font-style: oblique; font-size: 10px; color: #009933;" > Disponível </div>
							<div class="ratings">

								<div class="marca-produto" style = "font-style: oblique; font-size: 10px; color: #767676;" > 
									<%if produto.categorias == nil%>Categoria indefinida
									<%else%><span class="label"><i class="glyphicon glyphicon-tag"></i> <%= produto.categorias.split(" ").first %> </span><%end%></div>
								</div>
								<p class="pull-right">1 avaliação</p>
								<p>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
									<span class="glyphicon glyphicon-star"></span>
								</p>
							</div>
							<div><% if current_usuario.try(:fornecedor?) %>
								<!--Apenas fornecedores podem editar produtos -->
								<%= link_to edit_loja_produto_path(@loja, produto), :class => "btn btn-sm pull-center" do%> Editar <i class="glyphicon glyphicon-edit"></i><% end %>
								<% end %>
							</div>
						</div>
					</div>
					<% end %>
					<hr>
				</div>
			</div>