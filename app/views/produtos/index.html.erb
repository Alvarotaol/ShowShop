<div>
	<div>
        <div>
		  <h1>Catálogo de Produtos </h1>
            <% if current_usuario.try(:fornecedor?) %>
            <div class="btn-group">
                <% #unless @loja.nil? %>
		          <%= link_to "Novo Produto", new_loja_produto_path(@loja), :class => "btn btn-primary ui-btn-inline" %>
                <%# end %>
            <% end %>
		  </div>
        </div>
		<% #unless @loja.nil? %>
			<h2><%= @loja.nome %></h2>
		<%# end %>

	</div>

	<% @produtos.each do |produto| %>
		<div class="produto" style = "display: inline-block; margin-left: auto; margin-right: auto; width: 10em">
			<%=link_to image_tag(produto.imagem.url(:thumb), class: 'media-object', :align=> "middle"), loja_produto_path(@loja, produto) %>
				 <div class="nome-produto"> <%=link_to produto.nome, loja_produto_path(@loja, produto) %> </div>
			<div class="marca-produto" style = "font-style: oblique; font-size: 10px; color: #767676;" > <%= produto.marca %>  </div>
			<div class="disponibilidade" style = "font-style: oblique; font-size: 10px; color: #009933;" > Disponível </div>
			<div class="marca-produto" style = "font-style: oblique; font-size: 10px; color: #767676;" > Categoria indefinida </div>
			<div> R$ 99,99 </div>
		</div>
	<% end %>
	<br>
	<hr>
</div>