<%= form_for([@loja, @produto], :html => { :multipart => true }) do |f| %>
	<% if @produto.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(@produto.errors.count, "erro") %> impediram este produto de ser salvo:</h2>

			<ul>
			<% @produto.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		</div>
	<% end %>
	<!-- Campo nome -->
	<div class="row">
		<div class="col-sm-4">
		<!-- Nome do produto -->
			<div class="input-group input-group-sm">
				<span class="input-group-addon" style = "min-width:85px">Nome</span>
				<%= f.text_field :nome, class: "form-control"%>
			</div>
		<!-- Marca do produto -->
			<div class="input-group input-group-sm">
				<span class="input-group-addon" style = "min-width:85px">Marca</span>
				<%= f.text_field :marca, class: "form-control"%>
			</div>
            
        <!-- Categorias -->
            <div class="input-group input-group-sm">
				<span class="input-group-addon" style = "min-width:85px">Categorias</span>
                <%= f.text_field :categorias, class: "form-control"%>
			</div>
		<!-- Fim -->
		</div>
	</div>
	<div class="field">
		<%= f.label :imagem %><br>
		<%= f.file_field :imagem %>
	</div>
	<!-- BotÃ£o para enviar dados -->
	<div class="actions">
		<%= f.submit "Alterar", class: "btn btn-primary"%>
	</div>
<% end %>
