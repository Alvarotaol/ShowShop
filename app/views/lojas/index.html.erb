<p id="notice"><%= notice %></p>

<div>
<h1>Lojas</h1>
		<%if current_usuario.try(:fornecedor?) %>
					<div class="btn-group">
							<%= link_to "Nova Loja", new_loja_path, :class => "btn btn-primary ui-btn-inline" %>
					</div>
		<%end%>
</div>

<table>
	<tbody>
		<% @lojas.each do |loja| %>
			 <div class="loja" style = "display: inline-block; margin-left: auto; margin-right: auto; width: 10em">
					 <%=link_to image_tag(loja.imagem.url(:thumb), class: 'media-object', :align=> "middle"), loja_produtos_path(loja) %>
				<div class="nome-loja"> <%=link_to loja.nome, loja_produtos_path(loja)  %> </div>
			</div>
			<!-- Só é mostrado se o usuário for um fornecedor -->
			<% if current_usuario.try(:fornecedor?) %>
			<div class="dropdown">
				<button class="btn btn-secondary dropdown-toggle" type="button" id = "ddmenuLoja" data-toggle="dropdown">Ferramentas <i class="glyphicon glyphicon-wrench"></i>
				<span class="caret"></span></button>
				<ul class="dropdown-menu" role="menu" aria-labelledby="ddmenuLoja">
					<!--Ferramentas para o fornecedor -->
						<li class="dropdown-header">Fornecedores</li>
						<li><%= link_to "Mostrar", loja, :class => "" %></li>
						<li><%= link_to "Modificar Loja", edit_loja_path(loja), :class => "" %></li>
						<li><a href="#">Link para outra coisa?</a></li>
						<li class="divider"></li>
						<li><a href="#">Link para algo mais</a></li>
				</ul>
			</div>

			<% else %>
				<td><%= link_to loja, class: "btn btn-secondary" do%> Mostrar <% end %></td>
				<td><%= link_to edit_loja_path(loja), class: "btn btn-secondary" do%> Editar <i class="glyphicon glyphicon-edit"></i><% end %></td>
			<% end %>
		<% end %>
	</tbody>
</table>

<br>
