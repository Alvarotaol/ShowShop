<h2><%= t('.sign_in', :default => "Sign in") %></h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	<div class="row">
		<div class="col-sm-4">
		<!-- Email -->
			<div class="input-group input-group-sm">
				<span class="input-group-addon" style = "min-width:75px">Email</span>
				<%= f.email_field :email, class: "form-control"%>
			</div>
		<!-- Senha -->
			<div class="input-group input-group-sm">
				<span class="input-group-addon" style = "min-width:75px">Senha</span>
				<%= f.password_field :password, class: "form-control"%>
			</div>
		<!-- Lembrar senha? -->
			<% if devise_mapping.rememberable? -%>
				<div><%= f.check_box :remember_me %> <%= f.label :remember_me, :style => "display: inline-block;" %></div>
			<% end -%>
		<!-- Enviar -->
			<div><%= f.submit t('.sign_in', :default => "Sign in") %></div>
		<!-- Fim -->
		</div>
	</div>
<% end %>

<%= render "devise/shared/links" %>
